        <name>Loop_Users</name>
        <label>Loop Users</label>
        <locationX>50</locationX>
        <locationY>1607</locationY>
        <collectionReference>Get_Partner_Users</collectionReference>
        <iterationOrder>Asc</iterationOrder>
        <nextValueConnector>
            <targetReference>New_Order_Share</targetReference>
        </nextValueConnector>
